# Cognee Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED - Must be set for the application to work
# =============================================================================

# Neo4j Graph Database Password
# IMPORTANT: Set a strong password for Neo4j authentication
# This password is used for both NEO4J_AUTH and NEO4J_PASSWORD
NEO4J_PASSWORD=your-secure-neo4j-password-here

# LLM Provider API Key (e.g., OpenAI, Anthropic, etc.)
LLM_API_KEY=your-llm-api-key-here

# Embedding Provider API Key (often same as LLM_API_KEY)
EMBEDDING_API_KEY=your-embedding-api-key-here

# =============================================================================
# OPTIONAL - Defaults are provided but can be overridden
# =============================================================================

# PostgreSQL Database Configuration
POSTGRES_DB=cognee
POSTGRES_USER=cognee
POSTGRES_PASSWORD=cognee_password

# Vector Store Configuration
VECTOR_DB_PROVIDER=qdrant
QDRANT_API_KEY=

# Graph Database Configuration
NEO4J_HEAP_SIZE=2G
NEO4J_USER=neo4j
NEO4J_PASSWORD=ML
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# Application Configuration
COGNEE_PORT=8000
COGNEE_ENV=production
LOG_LEVEL=INFO

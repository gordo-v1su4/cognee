{
  "name": "Cognee Self-Hosted",
  "description": "AI Memory and Knowledge Graph Management System",
  "version": "1.0.0",
  "type": "docker-compose",
  "repository": {
    "type": "github",
    "url": "https://github.com/yourusername/cognee-selfhosted"
  },
  "services": {
    "cognee": {
      "name": "Cognee API",
      "image": "cognee:latest",
      "port": 8000,
      "healthcheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    },
    "postgres": {
      "name": "PostgreSQL Database",
      "image": "postgres:15-alpine",
      "internal": true
    },
    "neo4j": {
      "name": "Neo4j Graph Database",
      "image": "neo4j:5-community",
      "ports": [7474, 7687]
    },
    "qdrant": {
      "name": "Qdrant Vector Store",
      "image": "qdrant/qdrant:latest",
      "port": 6333
    }
  },
  "volumes": {
    "postgres_data": "PostgreSQL data persistence",
    "neo4j_data": "Neo4j graph data persistence",
    "neo4j_logs": "Neo4j logs",
    "qdrant_data": "Qdrant vector data persistence",
    "cognee_data": "Cognee application data",
    "cognee_logs": "Cognee application logs"
  },
  "environment": {
    "required": [
      {
        "key": "LLM_API_KEY",
        "description": "API key for LLM provider (e.g., OpenAI)",
        "type": "secret"
      },
      {
        "key": "EMBEDDING_API_KEY",
        "description": "API key for embedding provider",
        "type": "secret"
      },
      {
        "key": "POSTGRES_PASSWORD",
        "description": "PostgreSQL database password",
        "type": "secret"
      },
      {
        "key": "NEO4J_PASSWORD",
        "description": "Neo4j graph database password",
        "type": "secret"
      }
    ],
    "optional": [
      {
        "key": "LLM_PROVIDER",
        "description": "LLM provider (openai, anthropic, azure, ollama)",
        "default": "openai"
      },
      {
        "key": "LLM_MODEL",
        "description": "LLM model name",
        "default": "gpt-4"
      },
      {
        "key": "EMBEDDING_PROVIDER",
        "description": "Embedding provider",
        "default": "openai"
      },
      {
        "key": "EMBEDDING_MODEL",
        "description": "Embedding model name",
        "default": "text-embedding-3-small"
      },
      {
        "key": "LOG_LEVEL",
        "description": "Application log level",
        "default": "INFO"
      },
      {
        "key": "NEO4J_HEAP_SIZE",
        "description": "Neo4j heap size",
        "default": "2G"
      }
    ]
  },
  "documentation": {
    "readme": "README.md",
    "deployment": "DEPLOYMENT.md",
    "quickstart": "quickstart.sh"
  },
  "tags": [
    "ai",
    "knowledge-graph",
    "vector-database",
    "rag",
    "llm",
    "cognee",
    "goose"
  ]
}

